solvers
{
    p_rgh
    {
        solver          PCG;
        preconditioner
        {
            preconditioner  GAMG;
            tolerance       1.0E-05;
            relTol          0.01;
            smoother        DICGaussSeidel;
            nPreSweeps      0;
            nPostSweeps     2;
            nFinestSweeps   2;
            cacheAgglomeration true;
            nCellsInCoarsestLevel 100;
            agglomerator    faceAreaPair;
            mergeLevels     2;
        }
        tolerance       1.0E-06;
        relTol          0.0;
        maxIter         1000;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0.0;
    }

    "(U|k)"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1.0E-06;
        relTol          0.0;
        maxIter         1000;
    }

    "(U|k)Final"
    {
        $U;
        relTol          0.0;
    }

    "(T)"
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1.0E-10;
        relTol          0.0;
        maxIter         1000;
    }

    "(T)Final"
    {
        $T;
        relTol          0.0;
    }

}

